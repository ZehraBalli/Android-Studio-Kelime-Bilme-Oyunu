<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkapl"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="120dp"
        android:src="@drawable/btn_bos2"
        android:layout_marginLeft="63dp"
        android:id="@+id/main_activity_btn_bos2"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/main_activity_circleImageViewProfile"
        app:layout_constraintBottom_toBottomOf="@id/main_activity_circleImageViewProfile"
        app:layout_constraintLeft_toLeftOf="@id/main_activity_circleImageViewProfile"

        />

    <TextView
        android:layout_width="wrap_content"
        android:maxLength="15"
        android:textSize="16sp"
        android:text="Zehra"
        android:textColor="@color/mainUserNameTextColor"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/main_activity_btn_bos2"
        app:layout_constraintBottom_toBottomOf="@id/main_activity_btn_bos2"
        app:layout_constraintRight_toRightOf="@id/main_activity_btn_bos2"
        app:layout_constraintLeft_toLeftOf="@id/main_activity_btn_bos2">

    </TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:src="@drawable/ic_person"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/main_activity_circleImageViewProfile"
        app:civ_border_width="7dp"
        app:civ_border_color="@color/mainCircleImageBorderColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />



    <ImageView
        android:layout_width="110dp"
        android:src="@drawable/btn_bos3"
        android:layout_height="60dp"
        android:id="@+id/main_activity_imageViewHeartDesign"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_activity_circleImageViewProfile"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@+id/main_activity_imageViewHeartDesign"
        app:layout_constraintBottom_toBottomOf="@+id/main_activity_imageViewHeartDesign"
        app:layout_constraintRight_toRightOf="@+id/main_activity_imageViewHeartDesign"
        app:layout_constraintLeft_toLeftOf="@+id/main_activity_imageViewHeartDesign">


        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/mainUserHeartTextColor"
            android:textSize="12sp"
            android:id="@+id/main_activity_textViewUserHeartCount"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="+1"
            android:layout_height="20sp"/>

        <ImageView
            android:layout_width="35sp"
            android:src="@drawable/heart"
            android:layout_height="24sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="48dp"
        android:src="@drawable/ic_setting"
        android:layout_height="48dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>

    <ImageView
        android:layout_width="500dp"
        android:src="@drawable/cover"
        android:id="@+id/main_activity_imageViewCover"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/main_activity_circleImageViewProfile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_imageViewCover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <Button
            android:layout_width="180dp"
            android:onClick="mainBtnClick"
            android:background="@drawable/btn_hemenoyna2"
            app:backgroundTint="@null"
            android:id="@+id/main_activity_btn_hemenoyna2"
            android:layout_height="50dp"/>

        <Button
            android:layout_width="180dp"
            android:onClick="mainBtnClick"
            android:background="@drawable/btn_market2"
            app:backgroundTint="@null"
            android:layout_marginTop="15dp"
            android:id="@+id/main_activity_btn_market2"
            android:layout_height="50dp"/>

        <Button
            android:layout_width="180dp"
            android:onClick="mainBtnClick"
            android:background="@drawable/btn_cikis2"
            app:backgroundTint="@null"
            android:layout_marginTop="15dp"
            android:id="@+id/main_activity_btn_cikis2"
            android:layout_height="50dp"/>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>